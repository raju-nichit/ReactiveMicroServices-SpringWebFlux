package com.example.demoswagger;
import java.io.*;
import java.util.Base64;
import java.nio.file.Files;
import java.nio.file.Paths;

public class PdfToBase64 {
    public static void main(String[] args) {
        String filePath = "C:\\Users\\user\\Downloads\\08DPC9U_1208180055270200_27032025153716_RN.pdf";
        try {
            byte[] fileContent = Files.readAllBytes(Paths.get(filePath));
            String encodedString = Base64.getEncoder().encodeToString(fileContent);

            // Optional: write base64 to file
            Files.write(Paths.get("output_base64.txt"), encodedString.getBytes());

            System.out.println("PDF successfully encoded to Base64.");
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
