import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.util.Base64;

public class Base64FileEncoder {
    public static void main(String[] args) {
        // Paths for the input and output files
        Path inputFile = Paths.get("input.txt");
        Path outputFile = Paths.get("encoded_output.txt");

        try {
            // Read all bytes from the input file
            byte[] fileBytes = Files.readAllBytes(inputFile);

            // Encode the bytes into a Base64 string
            String encodedString = Base64.getEncoder().encodeToString(fileBytes);

            // Write the encoded string to the output file
            Files.writeString(outputFile, encodedString);

            System.out.println("File encoded successfully.");
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
