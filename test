import java.io.*;
import java.util.Base64;

public class PDFBase64Converter {

    // Convert PDF to Base64
    public static String encodePDFToBase64(String pdfPath) throws IOException {
        File file = new File(pdfPath);
        FileInputStream fis = new FileInputStream(file);
        byte[] pdfBytes = new byte[(int) file.length()];
        fis.read(pdfBytes);
        fis.close();
        return Base64.getEncoder().encodeToString(pdfBytes);
    }

    // Convert Base64 to PDF
    public static void decodeBase64ToPDF(String base64Content, String outputPdfPath) throws IOException {
        byte[] decodedBytes = Base64.getDecoder().decode(base64Content);
        FileOutputStream fos = new FileOutputStream(outputPdfPath);
        fos.write(decodedBytes);
        fos.close();
    }

    public static void main(String[] args) {
        String inputPdfPath = "C:/Users/user/Downloads/snehalJagdaleResume.pdf";  // Replace with your input PDF file path
        String outputPdfPath = "C:/Users/user/Downloads/snehalJagdaleResume2.pdf";
      
        try {
            // Convert PDF to Base64
            String base64String = encodePDFToBase64(inputPdfPath);
            System.out.println("Base64 Encoded PDF: " + base64String.substring(0, 100) + "..."); // Printing first 100 chars for preview

            // Convert Base64 back to PDF
            decodeBase64ToPDF(base64String, outputPdfPath);
            System.out.println("PDF successfully converted from Base64 and saved as: " + outputPdfPath);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
    
