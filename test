@Service
public class FileService {

    public String encodeFileToBase64(String filePath) throws IOException {
        File file = new File(filePath);
        byte[] fileBytes = Files.readAllBytes(file.toPath());
        System.out.println(new String(fileBytes));
        String out = Base64.getEncoder().encodeToString(fileBytes);
		System.out.println();
        
        
        System.out.println("Decoded passwords:");
        System.out.println(new String(Base64.getDecoder().decode(out)));

        return out;
    }
}
