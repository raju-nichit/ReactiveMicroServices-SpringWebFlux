package com.shivay.util;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;
import java.util.Base64;

public class FileBase64Decoder {
    public static void main(String[] args) {
      


        String inputFilePath = "C:\\Users\\Raju\\Documents\\WebClientConfigTest.java.b";
        String outputFilePath = "C:\\Users\\Raju\\Documents\\WebClientConfigTest.java.0";

        try {
            // Read the encoded file content
            byte[] encodedContent = Files.readAllBytes(Paths.get(inputFilePath));

            // Decode the content from Base64
            byte[] decodedContent = Base64.getDecoder().decode(new String(encodedContent));

            // Write the decoded content to the output file
            Files.write(Paths.get(outputFilePath), decodedContent);

            System.out.println("File decoded and saved successfully.");
        } catch (IOException e) {
            e.printStackTrace();
            System.out.println("An error occurred while processing the file.");
        }
    }
}
